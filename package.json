    "gen": "tsx scripts/run-interactive.ts"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "tsx": "^4.19.0",
    "typescript": "^5.3.0"
  }
}
